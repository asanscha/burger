<div class="container">
    <div class="row">
        <div class="col-xs text-center" id="top-bar">
            <h1>EAT DA BURGER</h1>
        </div>
        <div class="row">
            <input type="text" id="burgerName">
            
            </div>
            <button id="addBurger">Add Burger</button>
        </div>
        <div class="col-xs text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div> 
            <div class="col-xs-3 text-center">
                <form method="POST" action="/burgers/update?_method=POST?burger_id={{this.id}}" class="button-size">
                <input type="hidden" name="burger_id" type="text" value= {{this.id}}>
                <br>
                <button type="submit" class="btn btn-default" id={{this.id}}>DEVOUR IT</button>
                </form>       
            </div>
            {{/unless}}
            {{/each}}
            <div>
                <h2>Devoured Burgers</h2>
            </div>
            {{#each burger_data}}
            {{#if this.devoured}}
            <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div> 
            {{/if}}
            {{/each}}
            </div>
        </div>
    </div>
</div>
